<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">
    <title>Document</title>
</head>

<body>
    <!--@import "header.html"-->
    <main>
        <div class="container">
            <nav class="breadcrumbs">
                <a href="#" class="breadcrumb__link">Главная</a>
                <a href="#" class="breadcrumb__link">Мой кабинет</a>
                <a href="#" class="breadcrumb__link current">Оформление заказа</a>
            </nav>
            <form action="#">
                <div class="reg__steps-indicator">
                    <div class="step-indicator__item">
                        <div class="step-indicator__dot current"></div>
                        <div class="step-indicator__text current">1. Оформление</div>
                    </div>
                    <div class="step-indicator__item">
                        <div class="step-indicator__dot"></div>
                        <div class="step-indicator__text">2. Оплата</div>
                    </div>
                    <div class="step-indicator__item">
                        <div class="step-indicator__dot"></div>
                        <div class="step-indicator__text">3. Контактные данные</div>
                    </div>
                </div>
                <div class="reg__steps-inner">
                    <div class="reg__steps">
                        <div class="reg__step-heading">
                            Оформление заказа
                        </div>
                        <div class="reg__step-subheading">
                            Регион доставки
                        </div>
                        <div class="reg-group">
                            <div class="custom-select reg-select">
                                <span class="custom-select__value">Выберите регион</span>
                                <input type="hidden" class="custom-select__input">
                                <ul class="select-menu reg__select-menu">
                                    <li class="select-menu__item hidden">Регион 1</li>
                                    <li class="select-menu__item">Регион 2</li>
                                    <li class="select-menu__item">Регион 3</li>
                                    <li class="select-menu__item">Регион 4</li>
                                </ul>
                            </div>
                            <div class="custom-select reg-select">
                                <span class="custom-select__value">Выберите местоположение</span>
                                <input type="hidden" class="custom-select__input">
                                <ul class="select-menu reg__select-menu">
                                    <li class="select-menu__item hidden">Местоположение 1</li>
                                    <li class="select-menu__item">Местоположение 2</li>
                                    <li class="select-menu__item">Местоположение 3</li>
                                    <li class="select-menu__item">Местоположение 4</li>
                                </ul>
                            </div>
                        </div>
                        <div class="reg__step-subheading">
                            Способ доствавки
                        </div>
                        <div class="reg-group">
                            <div class="delivery-box">
                                <div class="delivery__item">
                                    <div class="delivery__item-text">
                                        Самовывоз
                                    </div>
                                    <span class="control control-checkbox">
                                        <input type="checkbox" class="reg-checkbox" />
                                        <span class="control_indicator"></span>
                                    </span>
                                    <div class="delivery__price">0</div>
                                </div>
                                <div class="delivery__item">
                                    <div class="delivery__img">
                                        <img src="img/pek-logo.jpg" alt="">
                                    </div>
                                    <span class="control control-checkbox">
                                        <input type="checkbox" class="reg-checkbox" />
                                        <span class="control_indicator"></span>
                                    </span>
                                    <div class="delivery__price">500</div>
                                </div>
                                <div class="delivery__item">
                                    <div class="delivery__img">
                                        <img src="img/cdec-logo.jpg" alt="">
                                    </div>
                                    <span class="control control-checkbox">
                                        <input type="checkbox" class="reg-checkbox" />
                                        <span class="control_indicator"></span>
                                    </span>
                                    <div class="delivery__price">500</div>
                                </div>
                                <div class="delivery__item">
                                    <div class="delivery__img">
                                        <img src="img/pek-logo.jpg" alt="">
                                    </div>
                                    <span class="control control-checkbox">
                                        <input type="checkbox" class="reg-checkbox" />
                                        <span class="control_indicator"></span>
                                    </span>
                                    <div class="delivery__price">500</div>
                                </div>
                                <div class="delivery__item">
                                    <div class="delivery__img">
                                        <img src="img/cdec-logo.jpg" alt="">
                                    </div>
                                    <span class="control control-checkbox">
                                        <input type="checkbox" class="reg-checkbox" />
                                        <span class="control_indicator"></span>
                                    </span>
                                    <div class="delivery__price">500</div>
                                </div>
                                <div class="delivery__item">
                                    <div class="delivery__img">
                                        <img src="img/pek-logo.jpg" alt="">
                                    </div>
                                    <span class="control control-checkbox">
                                        <input type="checkbox" class="reg-checkbox" />
                                        <span class="control_indicator"></span>
                                    </span>
                                    <div class="delivery__price">500</div>
                                </div>
                                <div class="delivery__item">
                                    <div class="delivery__img">
                                        <img src="img/cdec-logo.jpg" alt="">
                                    </div>
                                    <span class="control control-checkbox">
                                        <input type="checkbox" class="reg-checkbox" />
                                        <span class="control_indicator"></span>
                                    </span>
                                    <div class="delivery__price">500</div>
                                </div>
                                <div class="delivery__item">
                                    <div class="delivery__img">
                                        <img src="img/pek-logo.jpg" alt="">
                                    </div>
                                    <span class="control control-checkbox">
                                        <input type="checkbox" class="reg-checkbox" />
                                        <span class="control_indicator"></span>
                                    </span>
                                    <div class="delivery__price">500</div>
                                </div>
                            </div>
                        </div>
                        <div class="control-reg__links">
                            <a href="#" class="control__link">Далее</a>
                        </div>
                    </div>
                    <aside class="basket__sidebar">
                        <div class="basket-aside__head">
                            Ваша корзина
                        </div>
                        <div class="basket-calculation">
                            <div class="basket-calculation__item">
                                <span class="calculation-text">Итого</span>
                                <span class="calculation-value">32 000 ₽</span>
                            </div>
                            <div class="basket-calculation__item">
                                <span class="calculation-text">Доставка</span>
                                <span class="calculation-value">500 ₽</span>
                                <!--На тот случай, если доставка бесплатна-->
                                <!--<span class="calculation-value__free">Бесплатно</span>-->
                            </div>
                            <div class="basket-calculation__item">
                                <span class="calculation-text">Всего</span>
                                <span class="calculation-value">32 500 ₽</span>
                            </div>
                        </div>
                        <div class="basket__sidebar-buttons">
                            <!--<a href="#" class="button button-bg">Перейти к оформлению заказа</a>-->
                        </div>
                    </aside>
                </div>
            </form>
        </div>
    </main>
    <!--@import "footer.html"-->
    <div class="overlay"></div>
    <!--@import "registration-modal.html"-->
    <script src="js/swiper.js"></script>
    <script src="js/jQuery.js"></script>
    <script src="js/main.js"></script>
</body>

</html>