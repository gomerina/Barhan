<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/swiper.css">
    <link rel="stylesheet" href="css/style.css">
    <title>Document</title>
</head>

<body>
    <!--@import "header.html"-->
    <main>
        <div class="heading basket-head">
            <h5>КОРЗИНА</h5>
        </div>
        <div class="basket-body">
            <div class="container">
                <div class="basket-body__inner">
                    <div class="basket-items__box">
                        <div class="basket__item">
                            <div class="basket__item-left">
                                <div class="basket__img">
                                    <img src="img/basket-img.jpg" alt="">
                                </div>
                                <div class="basket__item-info">
                                    <h6 class="basket-brand">Sunspel</h6>
                                    <p class="basket-name">Трикотажные шорты</p>
                                    <p>ID : <span class="id-value">14143917</span></p>
                                </div>
                            </div>
                            <div class="basket__item-right">
                                <div class="basket-price">
                                    <div class="basket-price__head">32 000 ₽</div>
                                    <div class="basket-price__bottom">(включая НДС)</div>
                                </div>
                                <div class="basket-params">
                                    <div class="basket-params__item">
                                        <div class="basket-params__head">
                                            Размер
                                        </div>
                                        <div class="basket-params__bottom">
                                            <span class="basket-params__value">S</span>
                                            <button class="basket-change__button">Изменить</button>
                                        </div>
                                    </div>
                                    <div class="basket-params__item">
                                        <div class="basket-params__head">
                                            Количество
                                        </div>
                                        <div class="basket-params__bottom">
                                            <span class="basket-params__value">1</span>
                                            <button class="basket-change__button">Изменить</button>
                                        </div>
                                    </div>
                                    <div class="basket-buttons__box">
                                        <button class="basket-setting__button">В избранное</button>
                                        <button class="basket-setting__button">Удалить</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <aside class="basket__sidebar">
                        <div class="basket-aside__head">
                            Ваша корзина
                        </div>
                        <div class="basket-calculation">
                            <div class="basket-calculation__item">
                                <span class="calculation-text">Итого</span>
                                <span class="calculation-value">32 000 ₽</span>
                            </div>
                            <div class="basket-calculation__item">
                                <span class="calculation-text">Доставка</span>
                                <span class="calculation-value">200 ₽</span>
                            </div>
                            <div class="basket-calculation__item">
                                <span class="calculation-text">Всего</span>
                                <span class="calculation-value">32 200 ₽</span>
                            </div>
                        </div>
                        <div class="basket__sidebar-buttons">
                            <button class="button button-bg">Перейти к оформлению заказа</button>
                            <button class="button"><img src="img/btn-img.png" alt=""></button>
                        </div>
                    </aside>
                </div>
            </div>
        </div>
        <div class="product-cards">
            <div class="container">
                <div class="heading product-cards__head--basket">
                    <h5>Рекомендации</h5>
                </div>
                <div class="product-cards__body swiper">
                    <div class="swiper-wrapper">
                        <a href="#" class="product-card__item swiper-slide">
                            <div class="product-card__img">
                                <img src="img/basket-1.jpg" alt="">
                            </div>
                            <div class="product-card__info">
                                <div class="product-card__brand">
                                    <h6>Sandro</h6>
                                </div>
                                <p class="product-card__name">Худи с логотипом</p>
                                <p class="product-card__price">23 120</p>
                            </div>
                        </a>
                        <a href="#" class="product-card__item swiper-slide">
                            <div class="product-card__img">
                                <img src="img/basket-2.jpg" alt="">
                            </div>
                            <div class="product-card__info">
                                <div class="product-card__brand">
                                    <h6>Gucci</h6>
                                </div>
                                <p class="product-card__name">Куртка</p>
                                <p class="product-card__price">107 700</p>
                            </div>
                        </a>
                        <a href="#" class="product-card__item swiper-slide">
                            <div class="product-card__img">
                                <img src="img/basket-3.jpg" alt="">
                            </div>
                            <div class="product-card__info">
                                <div class="product-card__brand">
                                    <h6>Jordan & Travis Scott</h6>
                                </div>
                                <p class="product-card__name">брюки</p>
                                <p class="product-card__price">27 000</p>
                            </div>
                        </a>
                        <a href="#" class="product-card__item swiper-slide">
                            <div class="product-card__img">
                                <img src="img/basket-4.jpg" alt="">
                            </div>
                            <div class="product-card__info">
                                <div class="product-card__brand">
                                    <h6>Nike</h6>
                                </div>
                                <p class="product-card__name">Кроссовки</p>
                                <p class="product-card__price">39 000</p>
                            </div>
                        </a>
                        <a href="#" class="product-card__item swiper-slide">
                            <div class="product-card__img">
                                <img src="img/basket-5.jpg" alt="">
                            </div>
                            <div class="product-card__info">
                                <div class="product-card__brand">
                                    <h6>Evgeny Ches</h6>
                                </div>
                                <p class="product-card__name">Чехол</p>
                                <p class="product-card__price">3 500</p>
                            </div>
                        </a>
                    </div>
                    <div class="swiper-button-next"></div>
                    <div class="swiper-button-prev"></div>
                </div>
            </div>
        </div>
    </main>
    <!--@import "footer.html"-->
    <script src="js/swiper.js"></script>
    <script src="js/jQuery.js"></script>
    <script src="js/main.js"></script>
</body>

</html>